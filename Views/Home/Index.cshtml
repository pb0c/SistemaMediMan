
@{
    Layout = null;
    ViewBag.Title = "Acceso Usuario";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="~/Content/estiloLog.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <main>
        <div class="modal-dialog text-center">
            <div class="main-section">
                <!--Modal Content-->
                <div class="modal-content" style="background-color:#196dc880">
                    <div class="form-group">
                        <img src="~/Content/img/logoRS.png" width="200">
                    </div>
                    <form action="~/Views/Home/LogIn" method="get" class="form">
                        <div class="row">
                            <div class="form-group col-12">
                                <input type="text" class="form-control" name="user" placeholder="Usuario" />

                                <input type="text" class="form-control" name="pass" placeholder="Contraseña" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn" style="background-color:#134C89; color:azure" ><i class="fas fa-sign-in-alt" ></i>Acceder</button>
                            </div>
                        </div>
                    </form>
                </div> 
    <!--fin modal-content-->
            </div>
        </div>
    </main>


    <!--Footer-->
    <footer class="page-footer font-small white position-absolute mb-0 w-100 h-auto">
        <!-- Copyright -->
        <div class="footer-copyright" style="font-size:14px;">
            ©Copyright 2020 by Paulina Bordones. All rights reserved.
        </div>
        <!-- Copyright -->
    </footer>

    <!-- Fin Footer -->

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

