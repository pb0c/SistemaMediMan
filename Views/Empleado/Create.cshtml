            </div><!--fin row 2-->
            <div class="form-group form-group col-lg-3 col-sm-3 mt-1">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </main>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
